const express = require('express');
const app = express();
const port = 3000;

app.get('/', (req, res) => {
  res.send(`Servidor activo en ${process.env.HOSTNAME}`);
});

app.get('*', (req, res) => {
  res.status(404).sendFile(__dirname + '/views/error.html');
});

app.listen(port, () => {
  console.log(`Servidor ejecut√°ndose en puerto ${port}`);
});
