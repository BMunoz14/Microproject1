global
    log /dev/log local0
    maxconn 4096

defaults
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    default_backend web_servers

backend web_servers
    balance roundrobin
    server web1 192.168.56.11:3000 check
    server web2 192.168.56.12:3000 check

listen stats
    bind *:8080
    stats enable
    stats uri /stats
